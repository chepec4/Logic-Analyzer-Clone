// ============================================================================
// DIALOGS.RC (Definición visual de ventanas)
// Ubicación: src/rc/dialogs.rc
// ============================================================================
#include <windows.h>
#include <commctrl.h>

// Importante: Subimos un nivel para encontrar las definiciones de IDs
#include "../resource.h"

#define APSTUDIO_READONLY_SYMBOLS
#include "winres.h"
#undef APSTUDIO_READONLY_SYMBOLS

#if !defined(AFX_RESOURCE_DLL) || defined(AFX_TARG_ENU)
LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US
#pragma code_page(1252)

// ----------------------------------------------------------------------------
// DIÁLOGO DE AJUSTES (SETTINGS)
// ----------------------------------------------------------------------------
IDD_SETTINGS DIALOGEX 0, 0, 218, 256
STYLE DS_SETFONT | DS_CONTROL | WS_CHILD | WS_VISIBLE
EXSTYLE WS_EX_CONTROLPARENT
FONT 8, "MS Shell Dlg 2", 0, 0, 0x0
BEGIN
    // Selectores principales
    COMBOBOX        IDC_COMBO_BANDS, 64, 8, 48, 84, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    
    // Checkboxes de funcionalidad
    CONTROL         "Activar Pico", IDC_CHECK_PEAK, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 161, 105, 50, 10
    CONTROL         "Hold", IDC_CHECK_HOLD, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 161, 137, 44, 10
    CONTROL         "Promedio", IDC_CHECK_AVRG, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 161, 201, 44, 10

    // Decoración visual (Líneas divisorias)
    CONTROL         "", -1, "Static", SS_ETCHEDHORZ, 7, 46, 200, 1
    CONTROL         "", -1, "Static", SS_ETCHEDHORZ, 7, 94, 200, 1

    // Etiquetas de texto (IDs estáticos -1 para ahorrar recursos)
    LTEXT           "Canal:", -1, 7, 10, 49, 8
    LTEXT           "Bandas/Oct:", -1, 7, 26, 49, 8
    LTEXT           "Nivel", -1, 7, 42, 20, 8
    LTEXT           "Pico", -1, 7, 90, 18, 8
END

// ----------------------------------------------------------------------------
// DIÁLOGO DE EDITOR (COLORS)
// ----------------------------------------------------------------------------
IDD_EDITOR DIALOGEX 0, 0, 218, 240
STYLE DS_SETFONT | DS_CONTROL | WS_CHILD | WS_VISIBLE
EXSTYLE WS_EX_CONTROLPARENT
FONT 8, "MS Shell Dlg 2", 0, 0, 0x0
BEGIN
    LTEXT           "Esquema de Color:", -1, 7, 10, 60, 8
    COMBOBOX        400, 57, 8, 111, 84, CBS_DROPDOWN | WS_VSCROLL | WS_TABSTOP
    
    // Cuadro de color personalizado (Owner Draw)
    CONTROL         "", IDC_COLOR_WELL, "Static", SS_OWNERDRAW | SS_NOTIFY, 7, 38, 40, 12
END

// ----------------------------------------------------------------------------
// BITMAPS (Cargados desde la misma carpeta src/rc/)
// ----------------------------------------------------------------------------
IDB_TOOLBAR_ON  BITMAP  "toolbar-on.bmp"
IDB_TOOLBAR_OFF BITMAP  "toolbar-off.bmp"

#endif
